source 'https://rubygems.org'
ruby '2.0.0'

# PostgreSQL driver
gem 'pg'

# Sinatra driver
gem 'sinatra'
gem 'sinatra-contrib'

# Use Thin for our web server
gem 'thin'

# bcrypt
gem 'bcrypt', '~> 3.1.7'

# Websockets
gem "faye-websocket"

# Flash messages
gem 'sinatra-flash'

gem 'activesupport', '~>4.1'
gem 'activerecord', '~>4.1'

gem 'rake'

group :test do
  gem 'rack-test'
  gem 'rspec'
  gem 'nokogiri', '~> 1.6.1'
  gem 'faker'
end
